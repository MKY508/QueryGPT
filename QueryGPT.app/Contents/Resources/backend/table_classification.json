{
  "version": "1.0",
  "description": "表分类和字段映射配置",
  "table_classification": {
    "sales": {
      "name": "销售相关表",
      "priority": 1,
      "patterns": {
        "must_have": ["invoice|sales|revenue|收入"],
        "must_not_have": ["purchase|supplier|采购"]
      },
      "validation_fields": ["customer", "client", "buyer", "客户"]
    },
    "purchase": {
      "name": "采购相关表",
      "priority": 2,
      "patterns": {
        "must_have": ["purchase|procurement|supplier|采购"],
        "must_not_have": ["sales|customer|invoice"]
      },
      "validation_fields": ["supplier", "vendor", "seller", "供应商"]
    }
  },
  "field_mappings": {
    "quantity": {
      "sales": ["sales_qty", "invoice_qty", "sold_quantity", "销售数量"],
      "purchase": ["purchase_qty", "done_quantity", "采购数量"]
    },
    "amount": {
      "sales": ["sales_amount", "revenue", "invoice_amount", "销售额"],
      "purchase": ["purchase_amount", "cost", "采购额"]
    },
    "department": ["business_unit", "division", "organization_code", "事业部"],
    "date": ["invoice_date", "year_month", "v_month", "create_time"]
  }
}